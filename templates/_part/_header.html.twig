{#                    </button>#}

                    <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_index') }}">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_shop') }}">Shop</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_contact') }}">About Us</a>
                            </li>
                        </ul>
                    </div>

                    <div class="navbar-sm d-lg-none">
                        <input type="checkbox" id="navcheck" role="button" title="menu">
                        <label for="navcheck" aria-hidden="true" title="menu">
                                <span class="burger">
                                    <span class="bar">
                                    <span class="visuallyhidden">Menu</span>
                                    </span>
                                </span>
                        </label>
                        <nav id="menu">
                            {% set lastname = 'DDDDDDDDDDDDD' %}
                            {% if app.user %}
                                <a href="#">
                                    {% if lastname | length > 10 %}
                                        {{ lastname[:10] ~ '.....' }}
                                    {% else %}
                                        {{ lastname }}
                                    {% endif %}
                                </a>
                            {% else %}
                                <a href="{{ path('app_login') }}">Login</a>

                            {% endif %}
                            <a href="#">Wishlist</a>
                            <hr class="my-4">
                            <a href="#">Home</a>
                            <a href="#">Shop</a>
                            <a href="#">Contact</a>
                            <a href="#">About Us</a>
                        </nav>
                    </div>
                    <div class="hearer_icon d-flex">
                        <form action="#" method="POST">
                            <div class="search_bar ">
                                <input type="text" class="search-click" name="" placeholder="&#xF002; Search here" required/>
                            </div>
                        </form>
                        <div class="hearer_icon d-flex nav_others">
                            <a href="#"><i class="ti-heart d-none d-lg-block d-md-block"></i></a>
                            <div class="dropdown cart d-none d-md-block d-lg-block">
                                <a class="dropdown-toggle" href="{{ path('app_cart') }}" id="navbarDropdown3" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-cart-plus"><span class="cart_items">{{ totalquantity }}</span></i>
                                </a>
                                <div class="dropdown-menu shop-cart bg-transparent dropdown-menu-right" aria-labelledby="navbarDropdown">
                                    <div class="shopping-cart">
                                        <div class="shopping-cart-header">
                                            <span class="item-quantity">Total Quantity: {{ totalquantity }}</span>
                                            <div class="shopping-cart-total">
                                                <span class="lighter-text">Total:</span>
                                                <span class="main-color-text">$ {{ cartPrice }}</span>
                                            </div>
                                        </div>
                                        <!--end shopping-cart-header -->
                                        <ul class="shopping-cart-items">
                                            {% for x in 1..2 %}
                                                <li class="clearfix border-bottom border-white pb-4">
                                                    <a class="link" href="#">
                                                        <img src="{{ products[x].image }}" height="70" width="70" alt="item1" />
                                                        <span class="item-name">{{ products[x].name }}</span>
                                                        <span class="item-price">${{ products[x].price }}</span>
                                                        <span class="item-quantity">Quantity: {{ products[x].quantity }}</span>
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                        <a href="{{ path('app_cart') }}" class="button">Checkout</a>
                                    </div>
                                    <!--end shopping-cart -->
                                </div>
                            </div>
                            <div class="cart d-md-none d-lg-none">
                                <a href="{{ path('app_cart') }}"> <i class="fas fa-cart-plus"><span class="cart_items">{{ products | length }}</span></i> </a>
                            </div>
                            <a href="{{ path('app_login') }}"><i class="ti-user d-none d-lg-block d-md-block"></i></a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
